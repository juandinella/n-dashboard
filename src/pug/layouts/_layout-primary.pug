doctype html
html(lang='en')
  head
    block title
      title Neolo Dashboard
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
    
    //- Favicons and Android NavBar Color
    link(rel='icon', href='img/favicon.ico')
    link(rel='icon', type='image/png', href='img/favicon.png')
    meta(name='theme-color', content='#2F96E9')
    //- CSS Files
    link(rel='stylesheet', href='css/styles.css')
    link(rel='stylesheet', href='https://cdn.datatables.net/rowreorder/1.2.2/css/rowReorder.dataTables.min.css')
    link(rel='stylesheet', href='https://cdn.datatables.net/responsive/2.2.0/css/responsive.dataTables.css')
    block head
      //- If extra head content is necessary per page, it can be added in index.jade

  body
    div.is-hidden
      include ./includes/svg.svg

    block content
      //- This gets replaced by content in index.jade


    block footer
      //- If extra footer content is necessary per page, it can be added in index.jade

    script(src="js/vendor.js")
    script(src='js/app.js')

    block scripts
